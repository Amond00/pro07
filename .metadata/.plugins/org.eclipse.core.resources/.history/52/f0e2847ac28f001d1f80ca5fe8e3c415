package kr.go.gov.model;

import javax.inject.Inject;

import org.apache.ibatis.session.SqlSession;
import org.springframework.stereotype.Repository;

import kr.go.gov.dto.MemberDTO;

@Repository
public class MemberDAOImpl implements MemberDAO {
	
	@Inject
	SqlSession sqlSession;
	
	@Override
	public MemberDTO login(MemberDTO dto) throws Exception {
		return sqlSession.selectOne("member.login", dto);
	}
	
	@Override
	public String idck(String id) throws Exception {	
		return sqlSession.selectOne("member.idck", id);
	}
	@Override
	public MemberDTO join(MemberDTO dto) throws Exception {
		return sqlSession.insert("member.join", dto);
	}
}
